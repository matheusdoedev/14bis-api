{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": [
    ".sequelizerc",
    "src/**/*.ts",
    "src/database/config.js",
    "src/database/*.js"
  ],
  "exclude": ["node_modules"]
}
